{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "build",
    "config"
  ]
}
